---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTA from '../components/CTA.astro';
import { getLatestJobsFromNotion } from '../lib/notion.js';
import { Image } from 'astro:assets';

// Import images
import top1 from '../assets/images/top1.jpg';
import top2 from '../assets/images/top2.jpg';
import top3 from '../assets/images/top3.jpg';
import top4 from '../assets/images/top4.jpg';
import top5 from '../assets/images/top5.jpg';
import mvIconGo from '../assets/images/mv_icon_go.webp';
import mvIconSride from '../assets/images/mv_icon_sride.webp';
import mvIconUber from '../assets/images/mv_icon_uber.webp';
import mvIconDidi from '../assets/images/mv_icon_didi.webp';
import feature1 from '../assets/images/feature1.jpg';
import feature2 from '../assets/images/feature2.jpg';
import feature3 from '../assets/images/feature3.jpg';
import whyUs1 from '../assets/images/why-us1.jpg';
import whyUs2 from '../assets/images/why-us2.jpg';
import whyUs3 from '../assets/images/why-us3.jpg';
import bannerSquare from '../assets/images/banner-square.png';

const pageUrl = 'https://taxi-mate.jp/';
const pageTitle = 'タクシーメイト';
const pageDescription =
  'タクシーメイトはタクシー業界専門の転職支援サービスです。厳選した月給45万円以上が目指せる会社のみを紹介。タクシー業界を知り尽くしたキャリアアドバイザーがあなたの転職をサポートします。';

const jobs = await getLatestJobsFromNotion();
---

<BaseLayout title={pageTitle} description={pageDescription} url={pageUrl}>
  <!-- ページ固有のhead要素 -->
  <Fragment slot="head">
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
  </Fragment>

  <!-- トップページビュー -->
  <div class="relative isolate">
    <!-- 幾何学背景 -->
    <svg
      class="absolute inset-x-0 top-0 -z-10 h-256 w-full mask-[radial-gradient(32rem_32rem_at_center,white,transparent)] stroke-gray-200"
      aria-hidden="true"
    >
      <defs>
        <pattern
          id="1f932ae7-37de-4c0a-a8b0-a6e3b4d44b84"
          width="200"
          height="200"
          x="50%"
          y="-1"
          patternUnits="userSpaceOnUse"
        >
          <path d="M.5 200V.5H200" fill="none"></path>
        </pattern>
      </defs>
      <svg x="50%" y="-1" class="overflow-visible fill-gray-50">
        <path
          d="M-200 0h201v201h-201Z M600 0h201v201h-201Z M-400 600h201v201h-201Z M200 800h201v201h-201Z"
          stroke-width="0"></path>
      </svg>
      <rect
        width="100%"
        height="100%"
        stroke-width="0"
        fill="url(#1f932ae7-37de-4c0a-a8b0-a6e3b4d44b84)"></rect>
    </svg>

    <!-- グラデーション -->
    <div
      class="absolute top-0 right-0 left-1/2 -z-10 -ml-24 transform-gpu overflow-hidden blur-3xl lg:ml-24 xl:ml-48"
      aria-hidden="true"
    >
      <div
        class="aspect-801/1036 w-200.25 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30"
        style="clip-path: polygon(63.1% 29.5%, 100% 17.1%, 76.6% 3%, 48.4% 0%, 44.6% 4.7%, 54.5% 25.3%, 59.8% 49%, 55.2% 57.8%, 44.4% 57.2%, 27.8% 47.9%, 35.1% 81.5%, 0% 97.7%, 39.2% 100%, 35.2% 81.4%, 97.2% 52.8%, 63.1% 29.5%)"
      >
      </div>
    </div>

    <div class="overflow-hidden">
      <div class="mx-auto max-w-7xl px-6 pt-36 pb-32 sm:pt-60 lg:px-8 lg:pt-32">
        <div
          class="mx-auto max-w-2xl gap-x-14 lg:mx-0 lg:flex lg:max-w-none lg:items-center"
        >
          <div class="relative w-full lg:max-w-xl lg:shrink-0 xl:max-w-2xl">
            <h1
              class="text-5xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-7xl"
            >
              給与は頑張った分だけ。休みは自由に。
            </h1>
            <p
              class="mt-8 text-md font-medium text-pretty text-gray-700 sm:max-w-md sm:text-xl/8 lg:max-w-none"
            >
              タクシーメイトは、タクシー業界に特化した転職支援サービスです。あなたの住んでいる場所や希望の条件の中から最もマッチしたタクシー会社を厳選して紹介します。
            </p>
            <div
              class="mt-10 flex flex-col sm:flex-row items-center gap-4 sm:gap-x-6"
            >
              <a
                href="/lp-1/"
                target="_blank"
                class="w-full sm:w-auto rounded-md bg-indigo-600 px-3.5 py-2.5 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 flex items-center justify-center gap-2"
              >
                転職支援サービスに登録
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="size-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
                </svg>
              </a>
              <a
                href="/contact/"
                class="w-full sm:w-auto font-semibold text-gray-900 text-center"
              >
                メールで求人を受け取る <span aria-hidden="true">→</span>
              </a>
            </div>
          </div>

          <div
            class="mt-14 flex justify-end gap-8 sm:-mt-44 sm:justify-start sm:pl-20 lg:mt-0 lg:pl-0"
          >
            <div
              class="ml-auto w-44 flex-none space-y-8 pt-32 sm:ml-0 sm:pt-80 lg:order-last lg:pt-36 xl:order-0 xl:pt-80"
            >
              <div class="relative">
                <Image
                  src={top1}
                  alt="タクシー運転手が同僚と話している様子"
                  width={800}
                  height={1200}
                  class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div
                  class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                >
                </div>
              </div>
            </div>

            <div
              class="mr-auto w-44 flex-none space-y-8 sm:mr-0 sm:pt-52 lg:pt-36"
            >
              <div class="relative">
                <Image
                  src={top2}
                  alt="若い運転手が車に乗っている様子"
                  width={800}
                  height={1200}
                  class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div
                  class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                >
                </div>
              </div>
              <div class="relative">
                <Image
                  src={top3}
                  alt="若い女性のドライバーが運転している様子"
                  width={800}
                  height={1200}
                  class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div
                  class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                >
                </div>
              </div>
            </div>

            <div class="w-44 flex-none space-y-8 pt-32 sm:pt-0">
              <div class="relative">
                <Image
                  src={top4}
                  alt="お客さんを待っている若いドライバー"
                  width={800}
                  height={1200}
                  class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div
                  class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                >
                </div>
              </div>
              <div class="relative">
                <Image
                  src={top5}
                  alt="若いドライバーが洗車をしている様子"
                  width={800}
                  height={1200}
                  class="aspect-2/3 w-full rounded-xl bg-gray-900/5 object-cover shadow-lg"
                />
                <div
                  class="pointer-events-none absolute inset-0 rounded-xl ring-1 ring-gray-900/10 ring-inset"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- ロゴ -->
  <div class="bg-white py-0 sm:py-8">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div
        class="mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-4 sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:grid-cols-4"
      >
        <Image
          class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
          src={mvIconGo}
          alt="Transistor"
          width={316}
          height={96}
          quality={100}
        />
        <Image
          class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
          src={mvIconSride}
          alt="Reform"
          width={316}
          height={96}
          quality={100}
        />
        <Image
          class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
          src={mvIconUber}
          alt="Tuple"
          width={316}
          height={96}
          quality={100}
        />
        <Image
          class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
          src={mvIconDidi}
          alt="SavvyCal"
          width={316}
          height={96}
          quality={100}
        />
      </div>
    </div>
  </div>

  <!-- タクシーメイトの特徴 -->
  <div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h2
          class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
        >
          タクシーメイトの特徴
        </h2>
        <p class="mt-6 text-lg text-gray-700">
          月給45万円以上が目指せるタクシー業界に特化した求人紹介サービスです
        </p>
      </div>
      <ul
        role="list"
        class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        <li>
          <Image
            class="aspect-3/2 w-full rounded-2xl object-cover"
            src={feature1}
            alt="ドライバー志望者がスマホでタクシー会社の求人を探している様子"
            width={800}
            height={533}
          />
          <h3
            class="mt-6 text-lg/8 font-semibold tracking-tight text-gray-900 text-center"
          >
            住んでいる場所から適した企業を紹介
          </h3>
        </li>
        <li>
          <Image
            class="aspect-3/2 w-full rounded-2xl object-cover"
            src={feature2}
            alt="ドライバー志望者が面接対策を受けている様子"
            width={800}
            height={533}
          />
          <h3
            class="mt-6 text-lg/8 font-semibold tracking-tight text-gray-900 text-center"
          >
            面接対策を実施し高い合格率を実現
          </h3>
        </li>
        <li>
          <Image
            class="aspect-3/2 w-full rounded-2xl object-cover"
            src={feature3}
            alt="キャリアアドバイザーが企業に推薦書を提出している様子"
            width={800}
            height={533}
          />
          <h3
            class="mt-6 text-lg/8 font-semibold tracking-tight text-gray-900 text-center"
          >
            推薦書を作成するので内定が出やすい
          </h3>
        </li>
      </ul>
    </div>
  </div>

  <!-- タクシーメイトが選ばれる理由 -->
  <div class="bg-white">
    <div
      class="mx-auto max-w-2xl px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:px-8"
    >
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-5xl">
          タクシーメイトが選ばれる理由
        </h2>
        <p class="mt-4 text-gray-700">
          数多くの人材紹介・転職支援サービスの中でも、タクシーメイトは以下のような特徴があります。
        </p>
      </div>

      <div class="mt-16 space-y-16">
        <div
          class="flex flex-col-reverse lg:grid lg:grid-cols-12 lg:items-center lg:gap-x-8 mb-36"
        >
          <div class="mt-6 lg:col-span-5 lg:col-start-1 lg:row-start-1 lg:mt-0">
            <h3 class="text-2xl font-semibold text-gray-900">
              数分のお電話で推薦書を作成。だから合格率が高い。
            </h3>
            <p class="mt-2 text-gray-700">
              タクシーメイトでは、希望される方に数分のお電話で職歴や事故歴、運転履歴などをお伺いし推薦書を作成しています。現時点で履歴書など何も準備をしていない方でも、最短でお問合せしたその日中にタクシー企業との面接の日程まで決めることができます。求職者様には非常に早い転職活動ができたとご好評いただいております。
            </p>
          </div>
          <div class="flex-auto lg:col-span-7 lg:col-start-6 lg:row-start-1">
            <Image
              src={whyUs1}
              alt="White canvas laptop sleeve with gray felt interior, silver zipper, and tan leather zipper pull."
              width={1200}
              height={480}
              class="aspect-5/2 w-full rounded-lg bg-gray-100 object-cover"
            />
          </div>
        </div>
        <div
          class="flex flex-col-reverse lg:grid lg:grid-cols-12 lg:items-center lg:gap-x-8 mb-36"
        >
          <div class="mt-6 lg:col-span-5 lg:col-start-8 lg:row-start-1 lg:mt-0">
            <h3 class="text-2xl font-semibold text-gray-900">
              本当に条件に合った企業だけを紹介。だから紹介は厳選した2〜3社のみ。
            </h3>
            <p class="mt-2 text-gray-700">
              他社の人材紹介会社でお問い合わせをすると、すぐにタクシー会社を4〜5社紹介されて全ての企業と日程調整をすることが多くあります。これでは面接の日程調整も大変で、内定を受けた後も断らなくてはならないこともあります。タクシーメイトでは基本的には事前に働きたい条件を聞いた上でまずは厳選した1社（最大3社まで）を紹介します。ひとまず面接に行ってみようではなく、事前に条件を決めた上で面接に行く形での転職活動を推奨しています。
            </p>
          </div>
          <div class="flex-auto lg:col-span-7 lg:col-start-1 lg:row-start-1">
            <Image
              src={whyUs2}
              alt="Detail of zipper pull with tan leather and silver rivet."
              width={1200}
              height={480}
              class="aspect-5/2 w-full rounded-lg bg-gray-100 object-cover"
            />
          </div>
        </div>
        <div
          class="flex flex-col-reverse lg:grid lg:grid-cols-12 lg:items-center lg:gap-x-8"
        >
          <div class="mt-6 lg:col-span-5 lg:col-start-1 lg:row-start-1 lg:mt-0">
            <h3 class="text-2xl font-semibold text-gray-900">
              転職後もコミュニティで情報交換。だから継続的に稼ぐ人が多い。
            </h3>
            <p class="mt-2 text-gray-700">
              タクシーメイトには転職したドライバーの小さなコミュニティが存在します。実際に入社した後も、先輩ドライバーがどのように稼いでいるかや、最近はこのエリアが人が増えてきたなどの情報等、その業界の現役ドライバーしか知り得ない、鮮度の高い情報交換の場を設けています。このような仕組みがあることで、タクシーメイトから転職した人材は入社後も安定して稼げていることが特徴です。
            </p>
          </div>
          <div class="flex-auto lg:col-span-7 lg:col-start-6 lg:row-start-1">
            <Image
              src={whyUs3}
              alt="White canvas laptop sleeve with gray felt interior, silver zipper, and tan leather zipper pull."
              width={1200}
              height={480}
              class="aspect-5/2 w-full rounded-lg bg-gray-100 object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- おすすめの求人 -->
  <div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2
          class="text-4xl font-semibold tracking-tight text-balance text-gray-900 sm:text-5xl"
        >
          おすすめの求人
        </h2>
        <p class="mt-4 text-lg text-gray-700">
          月給45万円以上が目指せる求人を厳選して紹介しています
        </p>
      </div>
      <div
        class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        {
          jobs.map((job) => (
            <article class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pt-60 pb-8 sm:pt-48 lg:pt-60">
              <Image
                src={
                  job.coverUrl && job.coverUrl.trim() !== ''
                    ? job.coverUrl
                    : bannerSquare
                }
                alt={`${job.company}の求人画像`}
                width={800}
                height={600}
                class="absolute inset-0 -z-10 size-full object-cover"
              />
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40" />
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-gray-900/10 ring-inset" />

              <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm/6 text-gray-300">
                {job.dispatchApps && job.dispatchApps.length > 0 && (
                  <div class="flex items-center gap-x-2">
                    {job.dispatchApps.map((app: string) => (
                      <a
                        href="#"
                        class="relative z-10 rounded-full bg-gray-50 px-3 font-medium text-gray-600 hover:bg-gray-100"
                      >
                        {app}
                      </a>
                    ))}
                  </div>
                )}
              </div>
              <h3 class="mt-3 text-lg/6 font-semibold text-white">
                <a href={`/jobs/${job.id}/`}>
                  <span class="absolute inset-0" />
                  {job.title}
                </a>
              </h3>
              <span class="mt-2 text-sm/6 text-gray-300 whitespace-pre-line">
                {job.location}
              </span>
              <span class="mt-1 text-xs/6 text-gray-400">
                作成日時：
                {new Date(job.created_time)
                  .toLocaleString('ja-JP', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit',
                    hour: '2-digit',
                    minute: '2-digit',
                    hour12: false,
                  })
                  .replace(/\//g, '/')}
              </span>
            </article>
          ))
        }
      </div>
      <div class="mt-8 flex justify-center">
        <a
          href="/jobs/"
          class="font-semibold text-indigo-600 hover:text-indigo-500"
          >求人一覧を見る <span aria-hidden="true">&rarr;</span></a
        >
      </div>
    </div>
  </div>

  <!-- 入社までの流れ -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <!-- セクションタイトル -->
      <div class="text-center mb-12">
        <p class="text-gray-700 mb-2">お問い合わせから最短1週間で内定</p>
        <h2 class="text-5xl font-bold text-gray-900">入社までの流れ</h2>
      </div>

      <!-- プロセスのステップ -->
      <div class="max-w-3xl mx-auto">
        <div class="relative">
          <!-- 縦線（デスクトップ表示時） -->
          <div
            class="hidden md:block absolute left-6 top-12 bottom-0 w-0.5 bg-gray-300"
          >
          </div>

          <!-- ステップ1: お問い合わせ -->
          <div class="relative flex gap-4 mb-12">
            <div
              class="flex-shrink-0 w-12 h-12 bg-yellow-400 text-white rounded-full flex items-center justify-center font-bold text-xl z-10"
            >
              1
            </div>
            <div class="flex-grow pb-8">
              <h3 class="text-xl font-semibold mb-2">お問い合わせ</h3>
              <p class="text-gray-700 mb-3">
                LINEまたはお電話にて受け付けております。お気軽にお問い合わせください。<br
                />
                営業日であれば通常その日中に折り返しお電話をいたします。
              </p>
              <div class="flex flex-wrap gap-4 text-sm text-gray-600">
                <span class="flex items-center gap-1">
                  <span class="font-semibold">平日:</span> 10:00-19:00
                </span>
                <span class="flex items-center gap-1">
                  <span class="font-semibold">定休日:</span> 土日・祝日
                </span>
                <a
                  href="tel:0120-935-196"
                  class="flex items-center gap-1 text-yellow-600 hover:underline"
                >
                  <span class="font-semibold">折り返し番号:</span> 0120-935-196
                </a>
              </div>
            </div>
          </div>

          <!-- ステップ2: お電話でヒアリング -->
          <div class="relative flex gap-4 mb-12">
            <div
              class="flex-shrink-0 w-12 h-12 bg-yellow-400 text-white rounded-full flex items-center justify-center font-bold text-xl z-10"
            >
              2
            </div>
            <div class="flex-grow pb-8">
              <h3 class="text-xl font-semibold mb-2">
                お電話でヒアリング（推薦書作成）
              </h3>
              <p class="text-gray-700">
